<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_item_nomor_penting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/cardview"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_telepon_penting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_call_white_24dp"
                tools:ignore="RelativeOverlap"/>

            <TextView
                android:id="@+id/nama_telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_telepon_penting"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/icon_telepon_penting"
                android:layout_toRightOf="@+id/icon_telepon_penting"
                android:textColor="@color/icons"
                android:textSize="@dimen/ukuran16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomor_telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama_telepon"
                android:layout_toEndOf="@+id/icon_telepon_penting"
                android:layout_toRightOf="@+id/icon_telepon_penting"
                android:textColor="@color/icons"
                android:textSize="@dimen/ukuran14sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>